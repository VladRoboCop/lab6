@model Product[]

<!DOCTYPE html>
<html>
<head>
    <title>Order Confirmation</title>
</head>
<body>
    <h1>Order Confirmation</h1>
    <table>
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Quantity</td> <!-- Предположим, что у продукта есть свойство Quantity -->
                    <td>@product.Price</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
