@model Product[]

<!DOCTYPE html>
<html>
<head>
    <title>Order Products</title>
</head>
<body>
    <h1>Order Products</h1>
    @if (Model != null)
    {
        <form asp-action="Order" asp-controller="Product" method="post">
            @for (var i = 0; i < Model.Length; i++)
            {
                <label for="product@(i)">Product @(i + 1) Quantity:</label>
                <input type="number" id="product@(i)" name="products[@i].Quantity" min="0" required>
                <br>
            }
            <button type="submit">Order</button>
        </form>
    }
    else
    {
        <p>No products available</p>
    }
</body>
</html>
